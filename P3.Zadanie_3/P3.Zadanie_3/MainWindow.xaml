        <TextBlock Name="TextBlock4" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Ответ" Width="80" Margin="137,20,211,20" Grid.Row="3"></TextBlock>
        <TextBox Name="TextBox1" Margin="15,16,15,16" FontSize="25" Grid.Column="1"></TextBox>
        <TextBox Name="TextBox3" FontSize="25" Margin="15,16,15,16" Grid.Column="1" Grid.Row="2"></TextBox>
        <TextBox Name="TextBox2" Grid.Column="1" FontSize="25" Grid.Row="1" Margin="15,16,15,16" RenderTransformOrigin="0.415,0.421"/>
        <TextBox Name="Answer" Margin="15,16,15,16" Grid.Column="1" FontSize="15" Grid.Row="3"/>
        <Button FontSize="25" Click="Button_Click" Grid.Row="4" Grid.ColumnSpan="2" Margin="20,16,20,16" RenderTransformOrigin="0.478,0.333">Вычислить</Button>
    </Grid>
</Window>
